<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >
    	<TableRow
            android:id="@+id/layout_campo_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >
            
            <TextView
             android:id="@+id/lblPrecioDesde"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/txtPrecioDesde"
             android:layout_weight="1" />

        	<Spinner
             android:id="@+id/spinnerPrecioDesde"
             style="@style/SpinnerRedtabletAppTheme"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:listitem="@android:layout/simple_spinner_item"
             android:layout_weight="3" />
            
        </TableRow>
        
        <TableRow
            android:id="@+id/layout_campo_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp" >
            
            <TextView
             android:id="@+id/lblPrecioHasta"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/txtPrecioHasta"
             android:layout_weight="1" />

        	<Spinner
             android:id="@+id/spinnerPrecioHasta"
             style="@style/SpinnerRedtabletAppTheme"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             tools:listitem="@android:layout/simple_spinner_item"
             android:layout_weight="3" />
            
        </TableRow>

</TableLayout>
