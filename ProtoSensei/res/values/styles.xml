<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="dashboard_button">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_weight">0</item>      
        <item name="android:background">@drawable/home_button_selector</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textSize">10sp</item> 
    </style>
    
    <style name="normal_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/normal_button_selector</item>
    </style>
    
    <style name="item_vista_galeria">
       <item name="android:background">@drawable/item_galeria</item>
    </style>
    
    <style name="item_vista_lista">
       <item name="android:background">@drawable/item_lista</item>
       <item name="android:layout_height">100dp</item>
    </style>

</resources>
